<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:id="@+id/resultsContainer"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCorrect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textColor="@color/colorCollect"
        android:alpha="1.0"
        style="@style/AppTheme.displayJapaneseTextView.1"
        android:gravity="center|center_horizontal"
        android:text="@string/correct"
        />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:textColor="@color/colorCollect"
        android:alpha="1.0"
        style="@style/AppTheme.displayJapaneseTextView.3"
        android:gravity="center|center_horizontal"
        android:text="@string/placeholder" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewOnExamFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6418178360564076/4181062751"
        />

    <Button
        android:id="@+id/buttonFinish"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:textSize="60sp"
        style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:textStyle="normal"
        android:text="@string/finish" />
</LinearLayout>