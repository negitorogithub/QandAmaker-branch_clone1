<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.normalJapaneseTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/black</item>
        <item name="android:alpha">0.84</item>
    </style>
    <style name="AppTheme.displayJapaneseTextView">
        <item name="android:color">@color/black</item>
        <item name="android:alpha">0.54</item>
    </style>
    <style name="AppTheme.displayJapaneseTextView.1">
        <item name="android:textSize">34sp</item>
    </style>
    <style name="AppTheme.displayJapaneseTextView.2">
        <item name="android:textSize">45sp</item>
    </style>
    <style name="AppTheme.displayJapaneseTextView.3">
        <item name="android:textSize">56sp</item>
    </style>
    <style name="AppTheme.displayJapaneseTextView.4">
        <item name="android:textSize">112sp</item>
    </style>






    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
